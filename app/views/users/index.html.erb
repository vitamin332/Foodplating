<div class="container my-3">
  <h2>投稿者一覧</h2>
</div>
  <% @users.each do |user| %>
    <div class="container my-3">
      <%= link_to user_path(user) do %>
        <%= attachment_image_tag user, :profile_image, :size => '100x100', fallback: "no_image.jpg" %>
      <% end %><br>ユーザー名
      <%=link_to user.name, user_path(user) %><br>
        投稿数：<%= user.posts.count %><br>
    </div>
  <% end %>