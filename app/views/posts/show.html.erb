<div class="container my-5">
  <h2>投稿詳細</h2>
    <div class="row">
      <div class=" d-flex flax-wrap mr-4 ">
        <div class="card">
          <%= attachment_image_tag @post, :image, :size => '350x350' %>
          <p>タイトル<p>
          <%= @post.cooking_title %>
          <br>
          <p>本文</p>
          <%= simple_format @post.caption %>
        </div>
      </div>
    </div><br>
      <% if @post.user.id == current_user.id %>
        <%= link_to "編集", edit_post_path(@post), class: "btn btn-success" %><br>
        <br>
        <%= link_to "削除", post_path(@post.id), method: :delete, class: "btn btn-danger" %><br>
      <% end %>
</div>