<div class="container my-5">
  <h2 class="title">投稿一覧</h2>
  <div class="row">
  <% if user_signed_in? %>
    <% @posts.each do |post| %>
    <div class="col-md-3 mb-3">
      <div class="card">
        <%= link_to post_path(post) do %>
            <%= attachment_image_tag post, :image, class: 'card-img-top img-fluid post-card-img' %>
        <% end %>
        <div class="card-body">
          <h5 class="card-title">
            <%= post.cooking_title %>
          </h5>
          <div class="card-text">
            <div id="likes_buttons_<%= post.id %>" >
              <%= render "favorites/favorite", post: post %>
            </div>
            <%= post.updated_at.strftime("%Y-%m-%d %H:%M") %>
          </div>
        </div>
      </div>
    </div>
    <% end %>
  <% else %>



  <% end %>
 </div>
</div>