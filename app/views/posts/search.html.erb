<div class="container">
  <h2>検索結果</h2>
  <div class="row">
      <% @posts.each do |post| %>
          <div class="card">
            <%= link_to post_path(post) do %>
              <%= attachment_image_tag post, :image, class: 'card-img-top img-fluid post-card-img' %>
            <% end %>
            <div class="card-body">
              <h5 class="card-title">
              <%= post.cooking_title %>
            </h5>
            <div class="card-text">
              <%= link_to @user.name, user_path(current_user) %>
            </div>
          </div>
        </div>
      <% end %>
  </div>
</div>
